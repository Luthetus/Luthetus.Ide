@code {
	public static RenderFragment<VirtualizationDriver> GetRenderFragment = driver => 
	@<text>
		@if (driver.UseHorizontalVirtualization)
		{
			<div class="luth_te_virtualization-boundary-display luth_te_virtualization-boundary-display_left"
				 style="@driver.GetStyleCssString(driver._renderBatch.ViewModel.VirtualizationResult.LeftVirtualizationBoundary)">
			</div>
		
		    <div class="luth_te_virtualization-boundary-display luth_te_virtualization-boundary-display_right"
		    	 style="@driver.GetStyleCssString(driver._renderBatch.ViewModel.VirtualizationResult.RightVirtualizationBoundary)">
			</div>
		}
		
		@if (driver.UseVerticalVirtualization)
		{
			<div class="luth_te_virtualization-boundary-display luth_te_virtualization-boundary-display_top"
				 style="@driver.GetStyleCssString(driver._renderBatch.ViewModel.VirtualizationResult.TopVirtualizationBoundary)">
			</div>
		
		    <div class="luth_te_virtualization-boundary-display luth_te_virtualization-boundary-display_bottom"
		    	 style="@driver.GetStyleCssString(driver._renderBatch.ViewModel.VirtualizationResult.BottomVirtualizationBoundary)">
			</div>
		}
	</text>;
}