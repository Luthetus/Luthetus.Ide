@using Luthetus.Common.RazorLib.Options.Displays
@using Luthetus.TextEditor.RazorLib.Options.Displays

<div class="luth_ide_settings">
    
    <div class="luth_ide_settings-scope">
        <div class="luth_ide_settings-scope-title luth_ide_larger-font-size">
            Application Settings
        </div>
        
        <div class="luth_ide_settings-scope-body luth_indent-child-content">
            
            <div class="luth_ide_settings-scope-border"></div>
            
            <table>
            	<tr>
            		<td>Font Size</td>
            		<td> <InputAppFontSize/> </td>
            	</tr>
            	<tr>
            		<td>Font Family</td>
            		<td> <InputAppFontFamily/> </td>
            	</tr>
            	<tr>
            		<td>Icon Size</td>
            		<td> <InputAppIconSize/> </td>
            	</tr>
            	<tr>
            		<td>App Theme</td>
            		<td> <InputAppTheme/> </td>
            	</tr>
            </table>
        </div>
    </div>
    
    <div class="luth_ide_settings-scope">
        <div class="luth_ide_settings-scope-title luth_ide_larger-font-size">
            Text Editor Settings
        </div>
        
        <div class="luth_ide_settings-scope-body luth_indent-child-content">
            
            <div class="luth_ide_settings-scope-border"></div>
            
            <TextEditorSettingsPreview/>
            <InputTextEditorFontSize/>
            <InputTextEditorFontFamily/>
            <InputTextEditorCursorWidth/>
            <InputTextEditorShowNewLines/>
            <InputTextEditorShowWhitespace/>
            <InputTextEditorTheme/>
            <InputTextEditorKeymap/>
        </div>
    </div>
    
    <div class="luth_ide_settings-scope">
        <div class="luth_ide_settings-scope-title luth_ide_larger-font-size">
            IDE Settings
        </div>
        
        <div class="luth_ide_settings-scope-body luth_indent-child-content">
            
            <div class="luth_ide_settings-scope-border"></div>
            
            <IdeSettingsDisplay/>
        </div>
    </div>
</div>