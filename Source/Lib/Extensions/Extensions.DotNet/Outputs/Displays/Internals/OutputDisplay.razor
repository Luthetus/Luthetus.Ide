@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@using System.Collections.Immutable
@using Luthetus.Extensions.DotNet.CommandLines.Models
@using Luthetus.TextEditor.RazorLib.Lexers.Models

<div class="luth_output-display">
	
	@{ var localDiagnosticLineList = DotNetCliOutputParser.GetDiagnosticLineList(); }

	@(nameof(DotNetCliOutputParser)).@(nameof(DotNetCliOutputParser.GetDiagnosticLineList)).Length: @localDiagnosticLineList.Count

	<ol>
		@foreach (var diagnosticLine in localDiagnosticLineList)
		{
			var cssClass = string.Empty;
			
			@if (diagnosticLine.DiagnosticLineKind == DotNetCliOutputParser.DiagnosticLineKind.Warning)
			{
				cssClass = "luth_tree-view-warning";
			}
			else if (diagnosticLine.DiagnosticLineKind == DotNetCliOutputParser.DiagnosticLineKind.Error)
			{
				cssClass = "luth_tree-view-exception";
			}
			else if (diagnosticLine.DiagnosticLineKind == DotNetCliOutputParser.DiagnosticLineKind.Other)
			{
				cssClass = string.Empty;
			}
			
			<li class="@cssClass"
				style="margin: calc(1.6em + 4px) 0;">
				
				@diagnosticLine.Text
			</li>
		}
	</ol>
</div>