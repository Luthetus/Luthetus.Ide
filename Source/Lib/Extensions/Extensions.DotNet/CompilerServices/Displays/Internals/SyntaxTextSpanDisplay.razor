@using Luthetus.TextEditor.RazorLib.Lexers.Models;

<div class="luth_ide_syntax-text-span">
    <div>
        Spans from
        <span title="@nameof(TextSpan.StartInclusiveIndex)">@TextSpan.StartInclusiveIndex</span>
        to
        <span title="@nameof(TextSpan.EndExclusiveIndex)">@TextSpan.EndExclusiveIndex</span>
    </div>

    <input class="luth_ide_input luth_ide_input-text"
           @bind="InputValue"
           @bind:event="oninput"
           @onfocusout="CompleteForm"
           @onkeypress="HandleOnKeyDown" />
</div>